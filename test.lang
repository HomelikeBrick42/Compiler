// This will not work
// a :: b;
// b :: 5;

main :: () {
    a := 6;
    b := factorial(a);
    print b;
    c := b;
    c = c - a;
    print c;

    func := (a: int, b: int) -> int {
        return a + b;
    };

    print func(7, -5);

    func = (a: int, b: int) -> int {
        return a * b;
    };

    print func(7, -5);
};

factorial :: (n: int) -> int {
    if n == 1 {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
};
